# Copy this file to .env and add your OpenRouter API key
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Optional: Choose your preferred model (defaults to gpt-3.5-turbo)
# Available models: gpt-4, gpt-3.5-turbo, claude-3-sonnet, llama-2-70b, etc.
OPENROUTER_MODEL=gpt-3.5-turbo

# Optional: Your app name for OpenRouter (helps with rate limits)
OPENROUTER_APP_NAME=spooky-rss-system

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# Fetcher Configuration
MAX_CONCURRENT_FEEDS=10
FEED_TIMEOUT=10
MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO

# Future: Redis Cache Configuration
# REDIS_URL=redis://localhost:6379

# Future: Database Configuration  
# DATABASE_URL=sqlite:///./spooky_rss.db