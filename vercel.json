{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/test.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/health.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": ["backend/**"]
      }
    },
    {
      "src": "api/feeds/process.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": ["backend/**"]
      }
    },
    {
      "src": "api/narration/generate.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": ["backend/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/api/test.py"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/api/feeds/process",
      "dest": "/api/feeds/process.py"
    },
    {
      "src": "/api/narration/generate",
      "dest": "/api/narration/generate.py"
    },
    {
      "src": "/api/narration/status/(.*)",
      "dest": "/api/narration/generate.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
